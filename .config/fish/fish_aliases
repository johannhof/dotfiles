# Mercurial
alias hga='hg add'
alias hgc='hg commit'
alias hgca='hg commit --amend'
alias hgbk='hg bookmarks'
alias hgd='hg diff'
alias hgs='hg status'
alias hglr='hg pull --rebase'

# Git
alias ga='git add'
alias gc='git commit -v'
alias gst='git status'
alias gco='git checkout'
alias gd='git diff'
alias glog='git log --oneline --decorate --graph'
alias gp='git push'

# Mozilla
alias mpa='moz-phab patch'
alias msub='moz-phab submit'
